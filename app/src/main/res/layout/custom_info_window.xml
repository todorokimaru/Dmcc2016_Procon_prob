<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@drawable/info_bubble_white">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="30dp"
        android:id="@+id/Info_type"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Comment"
        android:id="@+id/Comment_str"
        android:layout_alignLeft="@+id/Comment"
        android:layout_alignStart="@+id/Comment"
        android:layout_width="wrap_content" />

    <TextView
        android:text="コメント"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Comment"
        android:layout_below="@+id/Info_type"
        android:layout_alignLeft="@+id/Info_type"
        android:layout_alignStart="@+id/Info_type" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Date"
        android:layout_below="@+id/User_id"
        android:layout_alignLeft="@+id/User_id"
        android:maxLines="2"
        android:scrollHorizontally="true"
        android:layout_alignStart="@+id/User_id" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/User_id"
        android:layout_alignBaseline="@+id/Info_type"
        android:layout_alignBottom="@+id/Info_type"
        android:layout_toRightOf="@+id/Info_type"
        android:layout_toEndOf="@+id/Info_type"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp" />

</RelativeLayout>